require 'rubygems'
require 'cpee-complex-rest/implementation'

options = {
  :host => 'localhost',
  :port => 9296,
  :secure => false
}

Riddl::Server.new(CPEE::ComplexRest::SERVER, options) do
  accessible_description true
  cross_site_xhr true

  @riddl_opts[:cpee] ||= 'http://localhost:8298/'

  use CPEE::ComplexRest::implementation(@riddl_opts)
end.loop!
